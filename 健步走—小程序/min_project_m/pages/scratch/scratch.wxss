  line-height:34rpx;
  font-size: 30rpx;
}

.close{
  width:50rpx;
  height:50rpx;
  background: #fff;
  border-radius: 50rpx;
  border:1px solid #f8f8f8;
  color: #3a3a3a;
    font-size: 48rpx;
    text-align: center;
    line-height:50rpx;
    position: absolute;
    bottom:4rpx;
    left:0;
    right:0;
    margin:auto;
    z-index: 999;
}

.close>cover-image{
  display: block;
  width:100%;
  height:100%;
}

