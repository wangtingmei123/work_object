}


.chou_box{
  width:100%;
  height:100vh;
  background: rgba(0,0,0,0.5);
  position: fixed;
  z-index:9999999;
  top:0;
  left:0;
}


.chou{
  width:610rpx;
  height:410rpx;
  position: absolute;
  top:0;left:0;bottom:0;right:0;
  margin:auto;

  
