/* pages/coupon/coupon.wxss */
page {
  width: 100%;
  background: #f8f8f8;
  font-size: 26rpx;
}
image {
  width: 100%;
  height: 100%;
}
button {
  background: none;
  padding: 0;
  border-radius: 0;
}
button::after{
  border:none;
}
.container {
  width: 100%;
  height: auto;
  padding: 10rpx 30rpx;
}

.item {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 14rpx;
  padding: 5rpx;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  height: 240rpx;
  position: relative;
}
.item_left {
  width: 435rpx;
  padding: 25rpx 25rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  box-shadow: 0rpx 1rpx 2rpx 2rpx #f8f8f8;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.item_title {
  font-size: 30rpx;
}
.item_time {
  font-size: 26rpx;
  padding-top: 10rpx;
  color: #505050;
}
.item_rule {
  color: #ababab;
}
.item_right {
  position: relative;
  padding: 25rpx 25rpx 40rpx;
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  box-shadow: 0rpx -1rpx 5rpx 2rpx #f8f8f8;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.item_price text {
  font-size: 40rpx;
  color: #e04234;

}
.reduce {
  color: #505050;
  width:auto;
}
.btn {
  font-size: 24rpx;
  color: #fff;
  background: #e04234;
  width: 130rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
  margin-top: 32rpx;
  line-height: 50rpx;
}
.item_img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.6);
  z-index: 999;
}
.item_img>image{
  display: block;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 115rpx;
  height: 109rpx;
}


.noorder{
  width:100%;
  height:100%;
  margin-top:300rpx;
}

.noorder>.noimg{
  display: block;
  width:133rpx;
  height:128rpx;
  margin:auto;
  margin-top:98rpx;
}

.notext{
  width:100%;
  height:26rpx;
  font-size: 26rpx;
  color: #ababab;
  text-align: center;
  line-height:26rpx;
  margin-top:36rpx;
}