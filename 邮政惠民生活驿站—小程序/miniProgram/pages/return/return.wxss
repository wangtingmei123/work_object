/* pages/return/return.wxss */
page {
  background: #f8f8f8;
}
.container {
  padding: 0;
}
image {
  width: 100%;
  height: 100%;
}
/* 商品详情 start */
.goods {
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #f8f8f8;
}.goods_right {
  font-size: 28rpx;
  width: 530rpx;
  margin-left: 20rpx;
}
.goods_img_big {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background: #ace;
}
.goods_item {
  display: flex;
  justify-content: space-between;
}
.goods_color {
  margin-top: 10rpx;
  color: #ababab;
  font-size: 26rpx;
}
.status_price {
  margin-bottom: 20rpx;
  background: #fff;
  font-size: 28rpx;
  width: 100%;
  height: 85rpx;
  border-bottom: 1rpx solid #f8f8f8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.distribution {
  color: #333;
}
.status_price_right {
  display: flex;
  flex-direction: row;
}
.status_price_right text,.wait_pay {
  color: #de3a2c;
}
/* 商品详情 end */
/* 选择 start */
.select_box{
  background: #fff;
  width: 80%;
  margin: 30rpx auto;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background: #f8f8f8;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
/* 选择 end */
.reason {
  width: 100%;
  background: #fff;
  font-size: 28rpx;
}
.reason_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.reason_price {
  height: 80rpx;
}
.reason_price_ctn {
  color: #de3a2c;
}
.reason_img_big {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  background: #f8f8f8;
}
.reason_img_ctn {
  width: 37rpx;
  height: 33rpx;
}
.reason_img {
  height: 160rpx;
  display: flex;
  justify-content: left;
}
.btn_big {
  height: 100rpx;
}
.btn {
  width: 100rpx;
  height: 50rpx;
  border: 1rpx solid #ababab;
  border-radius: 4rpx;
  text-align: center;
  line-height: 50rpx;
}